.allies-container
  padding 182px 0 150px 0
  background url('../img/backgrounds/allies-bg-a.png') top right no-repeat,
    url('../img/backgrounds/allies-bg-b.png') left bottom no-repeat
  background-size 914px auto

.allies-title
  font-size remify(45px)
  color #4b4b4b
  text-align center
  margin 0 0 117px 0

.allies-wrapper
  max-width 832px
  margin 0 auto
  display flex
  justify-content space-between
  flex-wrap wrap

.ally-wrapper
  width 242px
  height 221px
  background-color #fafafa
  display flex
  justify-content center
  align-items center
  transition .45s transform ease, .3s filter ease
  filter grayscale(100%)
  margin-bottom 55px

  &:hover
    box-shadow 0 3px 8px 0 rgba(200,205,205, .5)
    transform scale(1.03)
    filter grayscale(0);

  &:nth-child(1) .ally
      width 78px

  &:nth-child(2) .ally
      width 120px

  &:nth-child(3) .ally
      width 124px

  &:nth-child(4) .ally
      width 56px

  &:nth-child(5) .ally
      width 68px

  &:nth-child(6) .ally
      width 155px

  &:nth-child(7) .ally
      width 130px

  &:nth-child(8) .ally
      width 137px

  &:nth-child(9) .ally
      width 54px
