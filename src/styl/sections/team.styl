.team-container
  padding-top 200px
  display flex
  justify-content space-between
  items-aling center
  padding-left 9%
  padding-right 86px
  padding-bottom 135px

.team-our-team
  max-width 264.5px

.team-line // Line pink of the title
  position absolute
  left 0
  border-bottom 3px solid #f2b1cc
  width 21px

.team-title-container
  position relative
  margin-bottom 70px

.team-title
  color #4b4b4b
  font-size remify(45)
  line-height 39px
  letter-spacing .1px
  margin-top 17px
  margin-bottom 40px

.team-user
  color #4b4b4b
  font-size remify(18)
  line-height 39px
  letter-spacing .9px

.team-descrip
  margin-top 12px
  color #4c4c4c
  font-size remify(17)
  letter-spacing .2px
  line-height 23px

// Seccion de fotos
.team-photos
  flex-wrap wrap
  display flex
  justify-content space-around
  width 770px

.team-photo-container
  width 229px
  height 220px
  margin-bottom 18px

.team-photo-img
  position relative

  & img.social
    display block
    margin 13px auto
    width 20.9px
    height 20.9px

  & p
    margin-top 56px
    margin-bottom 2px
    font-size remify(18)
    line-height 21px
    letter-spacing .9px

  & span
    font-size remify(13)
    line-height 21px
    letter-spacing .1px

  & img
    width 100%

  &:hover .team-photo-mask
    transition opacity .5s ease
    opacity .77

  &:hover .team-photo-img img
    transform scale(1.1)

.team-photo-mask
  color white
  text-align center
  position absolute
  background-color #ee9bbe
  width 195px
  height 185.3px
  top 17px
  left 17px
  opacity 0
