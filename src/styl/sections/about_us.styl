.section-about
  margin-top 120px
  display flex
  padding-bottom 136px

.section-about-hi
  width 562.4px
  padding-left 144px
  margin-bottom 75px

.section-about__hi
  font-size remify(45)
  color #4b4b4b

.section-about__descrip
  color #4b4b4b
  font-size remify(20)
  letter-spacing .2px
  line-height 28px

.section-about-greek
  position relative
  background-color #fafafa
  padding-left 148px
  padding-top 80px
  padding 95px
  padding-right 63px
  width 646px

.section-about-greek__title
  padding-left 49px
  font-size remify(30)
  line-height 39px
  color #4b4b4b

.section-about-greek__descrip
  padding-left 50px
  font-size remify(20)
  line-height 28px
  letter-spacing .2px
  color #4b4b4b

.section-about-greek__icon
  position absolute
  right 46px
  top -46px
  padding-top 17px
  padding-bottom 17px
  text-align center
  width 95px
  height 95px
  border-radius 50%
  background-color #fff
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.05)

  & img
    height 60px

// Boxes

.section-about-container-bg
  flex-grow 1
  display flex
  flex-direction column
  align-items center
  justify-content center

.section-about-bg
  margin-top 90px

  & img
    height 418px

.section-about-container-box
  display flex
  flex-grow 1
  justify-content center
  align-items center

.section-about-box
  text-align center
  color #ee9bbe
  font-size remify(15)
  letter-spacing 2px
  line-height 19px
  width 170.8px
  height 171px
  border-radius 2px
  background-color #ffffff
  box-shadow 0 2px 8px 0 rgba(0, 0, 0, .10)

  & img
    padding-top 32px
    height 69px

.section-about-arrow
  padding 0 26px 0 26px

  & img
