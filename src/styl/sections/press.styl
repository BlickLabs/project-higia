.section-one-press
  padding-top 200px
  padding-bottom 124.6px
  background-image url('../img/backgrounds/section1-press.jpg')
  background-repeat no-repeat
  background-size contain
  background-position left 111px

.section-press-carousel-container
  max-width 707px
  margin 0 auto

  & .draggable
    padding 5px !important

.section-press-title
  font-size remify(45)
  line-height 39px
  letter-spacing .1px
  text-align center
  color #4b4b4b

.slick-prev,
.slick-next
  position absolute
  left -70.6px
  top 50%
  width 10px

.slick-next
  left 760px

.section-press-carousel-item
  outline 0px
  text-align center
  display flex !important
  flex-direction column
  justify-content center
  align-items center
  border-radius 2px
  background-color #ffffff
  box-shadow 0 2px 7px 0 rgba(0, 0, 0, 0.09)
  width 339px
  height 264px
  margin-left 10px
  margin-right 10px

.section-press-carousel-img
  width 121px

  & img
    width 100%

.section-press-carousel-text
  padding 0 30px 0 30px
  margin-top 31.4px
  margin-bottom 33px
  font-size remify(13)
  line-height 19px
  letter-spacing .2px
  color #4b4b4b

.higia-press-btn
  border 0
  padding 9.8px 15.4px
  font-size remify(11)
  color #fff
  letter-spacing 1.1px
  cursor pointer
  transition .2s background-color ease-in-out

// Section 2

.section-two-press
  background-image url('../img/backgrounds/section2-press.jpg')
  background-size 100% 100%
  background-repeat no-repeat
  padding-top 54.4px
  padding-left 214px
  padding-bottom 84.4px

.section-press-two-title-container
 width 318.7px

.section-press-two-title
  font-size remify(29)
  line-height 38px
  letter-spacing .1px
  color #4b4b4b
  margin-bottom 65.5px
  margin-bottom 30px

.placeholder-thin
  font-weight 100
  font-size remify(17)

// Hace los inputs del formulario de Press transparentes
.section_seven-field
  background transparent

.press-btn-margintop
  margin-top 100px
